<Page
    x:Class="Racepad2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Racepad2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Button x:Name="Ride" Click="Ride_Click" HorizontalAlignment="Stretch" Height="120" FontSize="50" Background="{ThemeResource HyperlinkButtonForeground}">RIDE</Button>
        <Button x:Name="History" Click="History_Click" HorizontalAlignment="Stretch" Height="70" FontSize="30" HorizontalContentAlignment="Left" Padding="20,0,0,0">History</Button>
        <Button HorizontalAlignment="Stretch" Height="70" FontSize="30" HorizontalContentAlignment="Left" Padding="20,0,0,0">Training</Button>
        <Button HorizontalAlignment="Stretch" Height="70" FontSize="30" HorizontalContentAlignment="Left" Padding="20,0,0,0">My Stats</Button>
        <Button x:Name="Settings" Click="Settings_Click" HorizontalAlignment="Stretch" Height="70" FontSize="30" HorizontalContentAlignment="Left" Padding="20,0,0,0">Settings</Button>
        
    </StackPanel>
</Page>
