<Page
    x:Class="Racepad2.MapViewPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Racepad2"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:maps="using:Racepad2.UI.Maps"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" 
                Grid.Column="0" 
                Height="40" 
                Width="40" 
                Click="Button_Click" 
                Content="&#xE700;"
                FontSize="24"
                FontFamily="Segoe MDL2 Assets"
                HorizontalAlignment="Right"/>
        <TextBlock Grid.Column="1"
                   Text="Route Planner"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"/>
        <maps:MapViewMap 
            Grid.Row="1" 
            Grid.Column="0"
            Grid.ColumnSpan="2"
            x:Name="Map"/>
        <SplitView  Grid.Row="1"
                    Grid.Column="0" 
                    Grid.ColumnSpan="2"
                    Name="Pane" 
                    IsPaneOpen="False"
                    DisplayMode="Overlay"
                    OpenPaneLength="300"
                    HorizontalAlignment="Left"
                    PaneBackground="#AA000000">
            <SplitView.Pane>
                <StackPanel>
                    <TextBlock Text="Route vias" 
                               Margin="10,10,10,0" 
                               FontSize="18" 
                               FontWeight="Bold"/>
                    <RelativePanel Margin="10" Height="40">
                        <Image Name="StartImg" Source="ms-appx:///Assets/Icons/A.png"
                               Height="20"
                               Width="20"
                               Margin="10,0,0,0"
                               RelativePanel.AlignVerticalCenterWithPanel="True"/>
                        <TextBlock RelativePanel.RightOf="StartImg" 
                                   Margin="10,0,0,0" 
                                   Text="15.623037, -11.601563"
                                   RelativePanel.AlignVerticalCenterWithPanel="True"/>
                        <Button RelativePanel.AlignVerticalCenterWithPanel="True"
                                FontFamily="Segoe MDL2 Assets"
                                Content="&#xE106;"
                                RelativePanel.AlignRightWithPanel="True"
                                Background="Transparent"
                                Height="40"
                                Width="40"/>
                    </RelativePanel>
                </StackPanel>
            </SplitView.Pane>
            <Grid Width="0"></Grid>
        </SplitView>
    </Grid>
</Page>
